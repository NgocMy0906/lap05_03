<h2>Products</h2>
<a href="/products/add">Add New Product</a>

<form method="GET" action="/products" style="margin-top:10px;">
    <input type="text" name="search" placeholder="Search name" value="<%= search || '' %>">
    <select name="supplier">
        <option value="">All Suppliers</option>
        <% suppliers.forEach(s=>{ %>
            <option value="<%= s._id %>" <%= supplier==s._id?'selected':'' %>><%= s.name %></option>
        <% }) %>
    </select>
    <button type="submit">Filter</button>
</form>

<table>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Supplier</th>
        <th>Actions</th>
    </tr>
    <% products.forEach(p => { %>
        <tr>
            <td>
                <%= p.name %>
            </td>
            <td>
                <%= p.price %>
            </td>
            <td>
                <%= p.quantity %>
            </td>
            <td>
                <%= p.supplier ? p.supplier.name : '' %>
            </td>
            <td>
                <a href="/products/edit/<%= p._id %>">Edit</a>
                <form class="delete-form" action="/products/delete/<%= p._id %>?_method=DELETE" method="POST" style="display:inline">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        <% }) %>
</table>