<h2>
    <%= supplier._id ? 'Edit' : 'Add' %> Supplier</h2>
<form action="<%= supplier._id ? '/suppliers/edit/' + supplier._id + '?_method=PUT' : '/suppliers/add' %>" method="POST">
    <label>Name:</label>
    <input type="text" name="name" value="<%= supplier.name || '' %>" required>
    <label>Address:</label>
    <input type="text" name="address" value="<%= supplier.address || '' %>">
    <label>Phone:</label>
    <input type="text" name="phone" value="<%= supplier.phone || '' %>">
    <button type="submit"><%= supplier._id ? 'Update' : 'Create' %></button>
</form>